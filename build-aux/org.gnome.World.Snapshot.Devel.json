{
    "id": "org.gnome.World.Snapshot.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm14"
    ],
    "command": "snapshot",
    "finish-args" : [
        "--device=dri",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1",
        "--env=RUST_LOG=snapshot=debug",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=xdg-videos",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm14/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold"
        },
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "zbar",
            "config-opts": [
                "--without-qt",
                "--without-qt5",
                "--without-gtk",
                "--without-xv",
                "--without-imagemagick",
                "--without-dbus",
                "--disable-video",
                "--without-java",
                "--without-python",
                "--with-doc=no",
                "--disable-doc",
                "--with-introspection=no",
                "--enable-codes=qrcode"
            ],
            "sources": [{
                    "type": "archive",
                    "url": "https://linuxtv.org/downloads/zbar/zbar-0.23.tar.gz",
                    "sha256": "ac52763a7dd6ddc53ca6cd75ccee14f7abf6ae46ecb31137d025af123edd33bf"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi -W none"
                    ]
                }
            ]
        },
        {
            "name": "x265",
            "subdir": "source",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DENABLE_CLI=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://deb.debian.org/debian/pool/main/x/x265/x265_3.5.orig.tar.gz",
                    "sha256":  "e70a3335cacacbba0b3a20ec6fecd6783932288ebc8163ad74bcc9606477cae8"
                }
            ]
        },
        {
            "name": "x264",
            "config-opts": [
                "--enable-shared",
                "--enable-pic",
                "--disable-cli"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://code.videolan.org/videolan/x264.git",
                    "commit": "baee400fa9ced6f5481a728138fed6e867b0ff7f"
                }
            ]
        },
        {
            "name": "gstreamer",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbad=enabled",
                "-Dbase=enabled",
                "-Ddevtools=disabled",
                "-Ddoc=disabled",
                "-Dexamples=disabled",
                "-Dges=disabled",
                "-Dgood=disabled",
                "-Dgood=enabled",
                "-Dgpl=enabled",
                "-Dgst-examples=disabled",
                "-Dgst-plugins-bad:openh264=disabled",
                "-Dgst-plugins-bad:vulkan=disabled",
                "-Dgst-plugins-bad:x265=enabled",
                "-Dgst-plugins-good:jpeg=enabled",
                "-Dgst-plugins-good:png=enabled",
                "-Dgst-plugins-ugly:x264=enabled",
                "-Dgtk_doc=disabled",
                "-Dintrospection=disabled",
                "-Dlibav=enabled",
                "-Domx=disabled",
                "-Dpython=disabled",
                "-Dqt5=disabled",
                "-Drs=disabled",
                "-Drtsp_server=disabled",
                "-Dsharp=disabled",
                "-Dtests=disabled",
                "-Dugly=enabled",
                "-Dvaapi=disabled"
            ],
            "build-options": {
                "env": {
                    "PKG_CONFIG_PATH": "/app/lib/codecs/lib/pkgconfig/:/app/lib/pkgconfig"
                }
            },
            "cleanup": [ "/bin/*webrtc*", "/bin/crossfade", "/bin/tsparser", "/bin/playout", "/lib/gstreamer-1.0/include/" ],
            "sources": [
                {
                    "type": "git",
                    "disable-submodules": true,
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git",
                    "tag": "1.22.0"
                }
            ]
        },
        {
            "name" : "pipewire",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dalsa=disabled",
                "-Dpipewire-alsa=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.freedesktop.org/pipewire/pipewire"
                }
            ]
        },
        {
            "name": "snapshot",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
