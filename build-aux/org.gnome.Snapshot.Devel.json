{
    "id": "org.gnome.Snapshot.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm15"
    ],
    "command": "snapshot",
    "finish-args": [
        "--device=dri",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1",
        "--env=RUST_LOG=snapshot=debug,aperture=debug",
        "--filesystem=xdg-pictures/Camera:create",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=xdg-videos/Camera:create",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm15/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_REGISTRIES_CRATES_IO_PROTOCOL" : "sparse"
        },
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "pipewire",
            "buildsystem": "meson",
            "config-opts": [
                "-Dalsa=disabled",
                "-Daudiotestsrc=disabled",
                "-Dbluez5-codec-aptx=disabled",
                "-Dbluez5-codec-lc3plus=disabled",
                "-Dbluez5-codec-ldac=disabled",
                "-Ddocs=disabled",
                "-Dexamples=disabled",
                "-Dgstreamer-device-provider=enabled",
                "-Dgstreamer=enabled",
                "-Djack=disabled",
                "-Dlibcanberra=disabled",
                "-Dlv2=disabled",
                "-Dman=disabled",
                "-Dpipewire-alsa=disabled",
                "-Dpw-cat=disabled",
                "-Droc=disabled",
                "-Dsession-managers=[]",
                "-Dsystemd-user-service=disabled",
                "-Dsystemd=disabled",
                "-Dtests=disabled",
                "-Dudev=disabled",
                "-Dudevrulesdir=$(pkg-config --variable=udevdir udev)/rules.d",
                "-Dvideotestsrc=disabled",
                "-Dvolume=disabled",
                "-Dvulkan=disabled"
            ],
            "cleanup": [
                "/bin/*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/pipewire/pipewire",
                    "tag": "0.3.69"
                }
            ]
        },
        {
            "name": "snapshot",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
